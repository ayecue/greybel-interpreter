{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],                     
        "allowJs": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}